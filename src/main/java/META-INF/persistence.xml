<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
	xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
	<persistence-unit name="finance-web-case-study"
		transaction-type="RESOURCE_LOCAL">
		<class>com.oracle.beans.User</class>
		<class>com.oracle.beans.Admin</class>
		<class>com.oracle.beans.EMICard</class>
		<class>com.oracle.beans.Product</class>
		<class>com.oracle.beans.Purchase</class>
		<class>com.oracle.beans.PurchaseItem</class>
		<class>com.oracle.beans.Transaction</class>
		<properties>
			<property name="jakarta.persistence.jdbc.url"
				value="jdbc:oracle:thin:@localhost:1521:orcl" />
			<property name="jakarta.persistence.jdbc.user" value="naman" />
			<property name="jakarta.persistence.jdbc.driver"
				value="oracle.jdbc.OracleDriver" />
			<property name="jakarta.persistence.jdbc.password"
				value="Naman123" />
		</properties>
	</persistence-unit>
</persistence>
